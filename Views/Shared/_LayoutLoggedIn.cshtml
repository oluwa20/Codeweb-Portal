<script>
    const initApp = () => {
        const paydrop = document.getElementById('pay');
        const dropdown = document.getElementById('dropdown');
        const hamburgBtn = document.getElementById('sidebar');

        const toggleMenu = (event) => {
            event.stopPropagation();
            dropdown.classList.toggle('hidden');
            dropdown.classList.toggle('flex');
            hamburgBtn.classList.toggle('change-color');
        };

        paydrop.addEventListener('click', toggleMenu);
        hamburgBtn.addEventListener('click', toggleMenu);


    };

    document.addEventListener('DOMContentLoaded', initApp);

    const Sidebar = () => {
        const hamburgBtn = document.getElementById('sidebar');
        const dropdown = document.getElementById('content');

        const toggleMenu = () => {
            dropdown.classList.toggle('hidden');
            dropdown.classList.toggle('flex');
            hamburgBtn.classList.toggle('toggle-btn');
        };

        hamburgBtn.addEventListener('click', toggleMenu);
    };

    document.addEventListener('DOMContentLoaded', Sidebar);
</script>
