@model IEnumerable<SMS.Models.Payment>

@{
    ViewData["Title"] = "Monthly Payments";
}


<h1>Monthly Payments</h1>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PepperShop</a> *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Create Student </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="GetStudents">Students </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="MonthlyPayments">Payment History </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="MonthlyRevenue">Revenue </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Expense">Insert Expenditures</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="GetExpense">Expenditures</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid">
    <div class="row">

        <div class="col-md-6">
            <div class="register-box">
                <div class="card">
                    <div class="card-body register-card-body">

                     <div class="register-box">
                      <div class="card">
                       <div class="card-body register-card-body">
                        @* <h1 class="login-box-msg">Monthly Payments</h1> *@
             <form method="post" action="">
                     <div class="form-group">
                     <label for="startMonth">Start Date:</label>
                     <input type="date" class="form-control" id="startMonth" name="startMonth" required />
                     </div>

                     <div class="form-group">
                     <label for="endMonth">End Date:</label>
                     <input type="date" class="form-control" id="endMonth" name="endMonth" required />
                     </div>
                     <div class="form-group">
                    <label for="year">Year:</label>
                    <input type="number" class="form-control" id="year" name="year" min="2000" max="2100" required />
                </div>

                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
                    </div>
                </div>
            </div>
        </div>
       
        <div class="col-md-6" style="margin-left:400px;  margin-top:-370px;">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => payment.Student.StudentName)</td>
                                <td>@Html.DisplayFor(modelItem => payment.Amount)</td>
                                <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                     <tfoot>
                      <tr>
                      <td colspan="2"><strong>Total Amount:</strong></td>
                      <td><strong>@ViewBag.TotalAmount.ToString(" ₦0")</strong></td>
                      </tr>
                      </tfoot>
                </table>
            }
            else
            {
                <p>No payments found for the specified period.</p>
            }
        </div>
    </div>
</div>



