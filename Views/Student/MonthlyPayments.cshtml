@model IEnumerable<SMS.Models.Payment>

@{
    ViewData["Title"] = "Monthly Payments";
}

@{
    Layout = "_LayoutLoggedIn";
}

<h1>Monthly Payments</h1>

<div class="container-fluid">
    <div class="row">

        <div class="col-md-6">
            <div class="register-box">
                <div class="card">
                    <div class="card-body register-card-body">

                     <div class="register-box">
                      <div class="card">
                       <div class="card-body register-card-body">
                        @* <h1 class="login-box-msg">Monthly Payments</h1> *@
             <form method="post" action="">
                     <div class="form-group">
                     <label for="startMonth">Start Date:</label>
                     <input type="date" class="form-control" id="startMonth" name="startMonth" required />
                     </div>

                     <div class="form-group">
                     <label for="endMonth">End Date:</label>
                     <input type="date" class="form-control" id="endMonth" name="endMonth" required />
                     </div>
                     <div class="form-group">
                    <label for="year">Year:</label>
                    <input type="number" class="form-control" id="year" name="year" min="2000" max="2100" required />
                </div>

                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
                    </div>
                </div>
            </div>
        </div>
       
        <div class="col-md-6" style="margin-left:400px;  margin-top:-370px;">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Amount</th>
                            <th>Payment Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => payment.Student.StudentName)</td>
                                <td>@Html.DisplayFor(modelItem => payment.Amount)</td>
                                <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                     <tfoot>
                      <tr>
                      <td colspan="2"><strong>Total Amount:</strong></td>
                      <td><strong>@ViewBag.TotalAmount.ToString(" ₦0")</strong></td>
                      </tr>
                      </tfoot>
                </table>
            }
            else
            {
                <p>No payments found for the specified period.</p>
            }
        </div>
    </div>
</div>



