@model SMS.ViewModels.EditPaymentViewModel

@{
    ViewData["Title"] = "Edit Student";
    Layout = "_LayoutLoggedIn";
}

<div class="max-w-md mx-auto mt-8 p-8 border border-gray-300 rounded-lg shadow-lg bg-white">
    <h1 class="text-3xl font-semibold mb-6">Edit Student</h1>

    <form asp-action="EditPayment" method="post" class="max-w-md mx-auto">
        <input type="hidden" asp-for="StudentId" />

        <div class="mb-4">
            <label for="StudentName" class="block text-sm font-medium text-gray-600">Student Name</label>
            <input asp-for="StudentName" id="StudentName" class="mt-1 p-2 w-full border rounded focus:outline-none focus:ring focus:border-orange-600" />
            <span asp-validation-for="StudentName" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label for="PaymentDate" class="block text-sm font-medium text-gray-600">PaymentDate</label>
            <input asp-for="PaymentDate" id="PaymentDate" class="mt-1 p-2 w-full border rounded focus:outline-none focus:ring focus:border-orange-600" />
            <span asp-validation-for="PaymentDate" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-4">
            <label for="Date" class="block text-sm font-medium text-gray-600">Date</label>
            <input asp-for="Date" id="Date" class="mt-1 p-2 w-full border rounded focus:outline-none focus:ring focus:border-orange-600" />
            <span asp-validation-for="Date" class="text-sm text-red-500"></span>
        </div>

        <div class="mb-6">
            <label for="Amount" class="block text-sm font-medium text-gray-600">Amount</label>
            <input asp-for="Amount" id="Amount" class="mt-1 p-2 w-full border rounded focus:outline-none focus:ring focus:border-orange-600" />
            <span asp-validation-for="Amount" class="text-sm text-red-500"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="PaymentId" />
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="StudentName" />
        </div>
        <button type="submit" class="w-full bg-orange-600 text-white py-2 px-4 rounded hover:bg-orange-700 focus:outline-none focus:ring focus:border-orange-700">
            Save
        </button>
    </form>
</div>

